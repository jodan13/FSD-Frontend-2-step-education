mixin comment(author, avatarLink, time, text, likeCount, likeCheck)
		.review
			.review__topBlock
				.review__like
					img.review__avatar(src=avatarLink, alt="avatar")
					+likeButton(likeCount, likeCheck)
				.review__bottomBlock
					p.review__name <b>#{author}</b>
					p.review__name #{time}
					p.review__content #{text}
