footer
	.footer__main
		.container
			.footer__info
				a(href='#').header__logo: img(src='./img/logo.svg')
				p Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»
			.footer__navigation
				.footer__nav
					h3 Навигация
					ul
						li: a(href="#") О нас
						li: a(href="#") Новости
						li: a(href="#") Служба поддержки
						li: a(href="#") Услуги
				.footer__about
					h3 О нас
					ul
						li: a(href="#") О сервисе
						li: a(href="#") Наша команда
						li: a(href="#") Вакансии
						li: a(href="#") Инвесторы
				.footer__support
					h3 Служба поддержки
					ul
						li: a(href="#") Соглашения
						li: a(href="#") Сообщества
						li: a(href="#") Связь с нами
			.footer__subscribe
				h3 Подписка
				p Получайте специальные предложения и новости сервиса
				+subscriptionField("Email")
	.footer__widgets
		.container
			.footer__copyright Copyright © 2018 Toxin отель. Все права защищены.
			ul.footer__social
				li.footer__item
					a(class='footer__twitter')
				li.footer__item
					a(class='footer__facebook')
				li.footer__item
					a(class='footer__instagram')